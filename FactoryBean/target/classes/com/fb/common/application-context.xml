<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="reminder" class="com.fb.beans.Reminder">
    <constructor-arg value="party"/>
    <constructor-arg ref="reminderDate"/>
    <property name="note" value="marriage Anniversary" />
    </bean>
    <bean id="reminderDate" class="com.fb.beans.CalendarFactoryBean">
    <constructor-arg  value="2019"/>
    <constructor-arg value="06"/>
    <constructor-arg value="01"/>
    
    </bean>

</beans>
